

@using MVCMoviesDetails.Models.Movies;
@model MovieModel


<h1>InsertView</h1>

<form>
    <div class="form-group">
        <div class="col-md-6">
            <label>MovieId</label>
            <div class="col-md-6">
                <input type="text" name="MovieId" id="movieId" />
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-6">
            <label>MovieName</label>
        </div>
        <div class="col-md-6">
            <input type="text" name="MovieName" id="movieName" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6">
            <label>Release Year</label>
        </div>
        <div class="col-md-6">
            <input type="text" name="ReleaseYear" id="MovieYear" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6">
            <label>Genre</label>
        </div>
        <div class="col-md-6">
            <input type="text" name="Genre" id="movieGenre" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6">
            <input type="button" value="Insert" id="btnjQueryPost" />
        </div>

    </div>
</form>

<div id="Insert"></div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $('#btnjQueryPost').on('click', function () {
        $.ajax(
            {
                url: '/Movie/InsertView',
                type: 'POST',
                data:
                {
                    Id: parseInt($('#movieId').val()),
                    Name: $('#movieName').val(),
                    releaseYear: $('#MovieYear').val(),
                    movieGenre: $('#movieGenre').val()
                },
                success: function (response) {
                    console.log(response);
                    $("#Insert").html(response);
                },
                error: function (error) {
                    console.log(error);
                }
            });
    });
</script>